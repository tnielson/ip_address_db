<html>
<head>
	<% @action_name = controller.action_name -%>
	<title>IP-DB/<%= controller.controller_name -%>::<%= @action_name -%></title>
	<%= stylesheet_link_tag 'application' %>
</head>
<body>
<div id="header">
	<h1>IP-DB / User Control Panel</h1>
	<p id="login">Angemeldet als: <%= @actual_user.user_name -%> </p>
</div>
<% if flash[:notice] then -%>
<div id="notice">
	<%= flash[:notice] -%>
</div>
<% end -%>
<% if flash[:error] then -%>
<div id="error">
	<%= flash[:error] -%>
</div>
<% end -%>

<%= yield -%>

</body>